<% title "Entry" %>

<p>
  <strong>Title:</strong>
  <%= @entry.title %>
</p>
<p>
  <strong>Message:</strong>
  <%= @entry.message %>
</p>
<p>
  <strong>Image:</strong>
  <%= @entry.image %>
</p>

<% if 
<%= form_for Entry.new, :remote => true do |f| %>
  <%= f.hidden_field :type, value: 'snapshot' %>
  <%= f.text_field :content %>

  <%= f.submit "Send" %>
<% end %>

<p>
  <%= link_to "Edit", edit_entry_path(@entry) %> |
  <%= link_to "Destroy", @entry, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", entries_path %>
</p>
