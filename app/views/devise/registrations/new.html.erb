<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.input :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.input :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.input :password_confirmation %></div>

  <div><%= f.label :time_zone %><br />
  <%= f.input :time_zone, priority: /EST/ %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :default => "Pacific Time (US & Canada)" %></div>

  <div><%= f.label :address %><br />
  <%= f.text_field :address, :id => "form-address" %></div>
  <input type="button" value="pick this place" onclick="formAddress()">

  <div><%= f.label :latitude %><br />
  <%= f.text_field :latitude, :readonly => true, :id => "form-latitude" %></div>

  <div><%= f.label :longitude %><br />
  <%= f.text_field :longitude, :readonly => true, :id => "form-longitude" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
<%= 'or' %>

<%= link_to "or Sign in", new_user_session_path %>



