<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", "token-input", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "jquery.tokeninput", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if user_signed_in? %>
    You are <%= current_user.email %>
    <%= link_to "Logout", destroy_user_session_path %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %>
  <% end %>

<%= yield %>

<script type="text/javascript">
   $('.dropdown-menu').on('click', function (e) {
     e.stopPropagation()
     });</script>

</body>
</html>
