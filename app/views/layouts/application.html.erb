<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <%= include_gon %>
  <%= stylesheet_link_tag "application", "token-input", media: "all" %>
  <%= javascript_include_tag "application", "jquery.tokeninput" %>
  <%= csrf_meta_tags %>
  <style type="text/css">
    html { height: 100% }
    body { height: 100%; margin: 0; padding: 0 }
/*    #map-canvas { height: 100% }
    #map-canvas img{max-width:none;}*/
  </style>
  <script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBgz3JV4xG6PhM2cuSm_oAKyncf6WMR4xI&sensor=true">
  </script>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=true">
  </script>

  <script type="text/javascript">
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</head>

<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if user_signed_in? %>
    <p>You are <%= current_user.email %>
    <%= link_to "Logout", destroy_user_session_path %></p>
    <%= link_to "Destroy Account", user_path(current_user), method: :delete, data: { confirm: "You sure?" } %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %>
  <% end %>

<%= link_to 'create snapshot', new_entry_path(:message_type => 'snapshot') %>
<%= link_to 'create happening', new_entry_path(:message_type => 'happening') %>
<%= link_to 'create reflection', new_entry_path(:message_type => 'reflection') %>

<%= yield %>

<script type="text/javascript">
   $('.dropdown-menu').on('click', function (e) {
     e.stopPropagation()
     });</script>

</body>
</html>
